{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "showOutput": "silent",
    "problemMatcher": "$tsc",
    "tasks": [
		{
			"taskName": "watch",
			"isBuildCommand": true,
			"showOutput": "always"
		},
        {
			"taskName": "make",
			"isBuildCommand": true,
			"showOutput": "always"
		},
        {
			"taskName": "test",
			"isBuildCommand": true,
			"showOutput": "always"
		}
		
	]
}